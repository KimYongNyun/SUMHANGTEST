<script>

function checkUserName(){
	var username=$('#user').val();
	
	if(username == ''){
		alert("Please enter Username");
		
	}
	else{
		$.get(''/checkusername?id='+username, function(data,err){
			if(data == 'true'){
				$('#user').val('');
				alert('Username already exists. Please enater anoter Username');
			}
			else{
				alert('You can user this Username');
			}
		});
		
	}
};


</script>